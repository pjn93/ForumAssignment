generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  forums   Forum[]
  comments  Comment[] 
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("users")
}

model Forum {
  id          Int       @id @default(autoincrement()) // âœ… FIXED
  title       String
  description String
  tags        String    @default("")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  comments    Comment[]
  authorId     Int
  author      User  @relation(fields: [authorId], references: [id])

  @@map("forums")
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relation to User (author)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int

  // Relation to Forum (parent post)
  forum     Forum    @relation(fields: [forumId], references: [id])
  forumId   Int

  @@map("comments")
}
